<!DOCTYPE html>
<html>
<%- include('partials/head'); %>
<body>
  <%- include('partials/header', {title: 'All The Todos'}); %>
  <ul>
    <% tasks.forEach( task => {  %>
      <li class="<%= task.done ? 'done' : '' %>">
        <a href="/tasks/<%= task.id %>">
          <%- include('partials/task', {task: task}); %>
        </a>
      </li>
    <% }) %>
  </ul>
</body>
</html>